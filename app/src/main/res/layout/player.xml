<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<RelativeLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#212121"
		android:orientation="vertical">
		<RelativeLayout
			android:id="@+id/linear_player"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:layout_weight="1" />
		<LinearLayout
			android:id="@+id/linear_controllers"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/shadowcover"
			android:orientation="vertical"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="left|center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear_backbtn"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:src="@drawable/ic_keyboard_arrow_left_white"
						android:scaleType="fitXY" />
				</LinearLayout>
				<TextView
					android:id="@+id/textview1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="AniMega"
					android:textSize="16sp"
					android:textColor="#FFFFFF" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/linear6"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<LinearLayout
						android:id="@+id/linear7"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal"
						android:translationY="20.0dp">
						<LinearLayout
							android:id="@+id/rewindBtn"
							android:layout_width="60dp"
							android:layout_height="60dp"
							android:padding="8dp"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/rewindIcon"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:src="@drawable/control_5"
								android:scaleType="fitXY" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/playBtn"
							android:layout_width="60dp"
							android:layout_height="60dp"
							android:layout_marginLeft="8dp"
							android:layout_marginRight="8dp"
							android:padding="8dp"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/playIcon"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:src="@drawable/control_4"
								android:scaleType="fitXY" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/forwardBtn"
							android:layout_width="60dp"
							android:layout_height="60dp"
							android:padding="8dp"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/forwardIcon"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:src="@drawable/control_6"
								android:scaleType="fitXY" />
						</LinearLayout>
					</LinearLayout>
					<ProgressBar
						android:id="@+id/progressbar1"
						android:layout_width="70dp"
						android:layout_height="70dp"
						android:padding="8dp"
						android:indeterminate="false"
						style="?android:progressBarStyle" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="right|center_vertical"
					android:orientation="horizontal">
					<Button
						android:id="@+id/button1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5dp"
						android:layout_marginTop="5dp"
						android:layout_marginRight="10dp"
						android:layout_marginBottom="5dp"
						android:paddingLeft="10dp"
						android:paddingTop="8dp"
						android:paddingRight="10dp"
						android:paddingBottom="8dp"
						android:background="#FF5722"
						android:text="Skip 85s"
						android:textSize="14sp"
						android:textColor="#FFFFFF" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear_seekbar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="10dp"
				android:paddingTop="8dp"
				android:paddingRight="10dp"
				android:paddingBottom="8dp"
				android:gravity="left|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/currentVideoTime"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_horizontal|center_vertical"
					android:text="0:0:0"
					android:textSize="14sp"
					android:textColor="#FFFFFF" />
				<SeekBar
					android:id="@+id/seekbar1"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:layout_weight="1" />
				<TextView
					android:id="@+id/videoTimeDuration"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_horizontal|center_vertical"
					android:text="0:0:0"
					android:textSize="14sp"
					android:textColor="#FFFFFF" />
				<ImageView
					android:id="@+id/imageview2"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_marginLeft="8dp"
					android:src="@drawable/download"
					android:scaleType="fitXY" />
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
